# iron/go:dev is the alpine image with the go tools added
FROM iron/go:dev

WORKDIR /go/src/github.com/myriadeinc/pickaxe/

COPY . .

RUN ["go", "get", "github.com/githubnemo/CompileDaemon"]

RUN dep ensure

# Hot reloading build for development
ENTRYPOINT CompileDaemon -log-prefix=false -build="go build ./src/main.go" -command="./api"
